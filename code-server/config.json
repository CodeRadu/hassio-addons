{
  "name": "Code Server",
  "description": "VScode in Home Assistant",
  "version": "0.1.4",
  "slug": "code-server",
  "arch": ["aarch64", "amd64"],
  "startup": "application",
  "boot": "auto",
  "url": "https://github.com/CodeRadu/hassio-addons/tree/main/code-server",
  "map": [
    "config:rw",
    "ssl:rw",
    "share:rw",
    "media:rw",
    "backup:rw",
    "addons:rw"
  ],
  "ports": {
    "8080/tcp": null,
    "3000/tcp": null,
    "22/tcp": 8022
  },
  "ports_description": {
    "8080/tcp": "Web interface. Not required for ingress",
    "3000/tcp": "For web development",
    "22/tcp": "For remote VSCode server using ssh"
  },
  "ingress": true,
  "ingress_port": 8080,
  "panel_icon": "mdi:microsoft-visual-studio-code",
  "backup_exclude": ["*/*/"],
  "options": {
    "userpass": "password"
  },
  "schema": {
    "userpass": "str"
  },
  "image": "ghcr.io/coderadu/code-server-hassio"
}
