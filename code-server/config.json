{
  "name": "Code Server",
  "description": "Code server in Home Assistant",
  "version": "0.1.8",
  "slug": "code-server",
  "arch": [
    "aarch64",
    "amd64"
  ],
  "startup": "application",
  "boot": "auto",
  "url": "https://github.com/CodeRadu/hassio-addons/tree/main/code-server",
  "map": [
    "config:rw",
    "ssl:rw",
    "share:rw",
    "media:rw",
    "backup:rw",
    "addons:rw"
  ],
  "ports": {
    "8080/tcp": null,
    "3000/tcp": null
  },
  "ports_description": {
    "8080/tcp": "Web interface. Not required for ingress",
    "3000/tcp": "For web development"
  },
  "ingress": true,
  "ingress_port": 8080,
  "panel_icon": "mdi:microsoft-visual-studio-code",
  "image": "ghcr.io/coderadu/code-server-hassio-{arch}"
}